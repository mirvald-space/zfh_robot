# Токен Telegram бота (отримати у @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Токен API FreelanceHunt
FREELANCEHUNT_TOKEN=your_freelancehunt_api_token_here

# Webhook налаштування (для продакшена)
# Можна вказати з протоколом або без
WEBHOOK_HOST=https://your-domain.com
# або просто: WEBHOOK_HOST=ваш-домен.com

WEBHOOK_PORT=3000
WEBHOOK_PATH=/webhook

# Веб-сервер налаштування
WEBAPP_HOST=0.0.0.0
WEBAPP_PORT=3000

# Режим розробки (не встановлювати webhook)
DEV_MODE=true