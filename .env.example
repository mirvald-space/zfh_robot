# ============================================================================
# ОБОВ'ЯЗКОВІ ПАРАМЕТРИ
# ============================================================================

# Telegram Bot Token (отримати у @BotFather)
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Freelancehunt API Token (отримати в налаштуваннях профілю)
FREELANCEHUNT_TOKEN=your_freelancehunt_api_token_here

# ============================================================================
# MONGODB SETTINGS
# ============================================================================

# MongoDB connection URI
MONGO_URI = 

# MongoDB database name
MONGO_DB_NAME = zfh_db

# ============================================================================
# WEBHOOK НАЛАШТУВАННЯ
# ============================================================================

# Webhook host (для production використовуйте ваш домен, для розробки - ngrok URL)
# Приклади:
# - Production: https://your-bot.herokuapp.com
# - Development: https://abc123.ngrok.io
# - Local: http://localhost (тільки для DEV_MODE=true)
WEBHOOK_HOST=https://your-domain.com

# Webhook path (шлях для отримання оновлень від Telegram)
WEBHOOK_PATH=/webhook

# ============================================================================
# WEB APPLICATION НАЛАШТУВАННЯ
# ============================================================================

# Host для веб-додатку (0.0.0.0 для production, localhost для розробки)
WEBAPP_HOST=0.0.0.0

# Порт для веб-додатку
# Примітка: Render.com автоматично використовує порт 10000
WEBAPP_PORT=3000

# ============================================================================
# РЕЖИМ РОБОТИ
# ============================================================================

# Режим розробки (true - використовує polling замість webhook)
# В режимі розробки webhook не встановлюється
DEV_MODE=false

# Рівень логування (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================================================
# МОНІТОРИНГ ПРОЕКТІВ
# ============================================================================

# Інтервал перевірки нових проектів (в секундах)
# За замовчуванням: 60 секунд (1 хвилина)
DEFAULT_CHECK_INTERVAL=60

# Мінімальний інтервал перевірки (в секундах)
# Не рекомендується встановлювати менше 30 секунд
MIN_CHECK_INTERVAL=30

# Максимальний інтервал перевірки (в секундах)
# За замовчуванням: 3600 секунд (1 година)
MAX_CHECK_INTERVAL=3600

# ============================================================================
# API RATE LIMITING
# ============================================================================

# Мінімальний інтервал між API запитами (в секундах)
# Допомагає уникнути перевищення лімітів API
MIN_API_REQUEST_INTERVAL=1.0

# Поріг попередження про ліміти API
# Коли залишається менше цієї кількості запитів, бот стає обережнішим
RATE_LIMIT_WARNING_THRESHOLD=20

# Критичний поріг лімітів API
# Коли залишається менше цієї кількості запитів, бот значно сповільнюється
RATE_LIMIT_CRITICAL_THRESHOLD=10

# ============================================================================
# ДОДАТКОВІ НАЛАШТУВАННЯ (ОПЦІОНАЛЬНО)
# ============================================================================

# Таймаут для HTTP запитів (в секундах)
# HTTP_TIMEOUT=30

# Максимальна кількість повторних спроб при помилках API
# MAX_RETRIES=3

# Інтервал між повторними спробами (в секундах)
# RETRY_DELAY=5

# ============================================================================
# ПРИКЛАДИ КОНФІГУРАЦІЙ
# ============================================================================

# Для локальної розробки:
# DEV_MODE=true
# WEBAPP_HOST=localhost
# WEBAPP_PORT=3000
# WEBHOOK_HOST=http://localhost

# Для production на Render.com:
# DEV_MODE=false
# WEBAPP_HOST=0.0.0.0
# WEBAPP_PORT=10000
# WEBHOOK_HOST буде автоматично встановлено з RENDER_EXTERNAL_URL

# Для production на Heroku:
# DEV_MODE=false
# WEBAPP_HOST=0.0.0.0
# WEBAPP_PORT буде автоматично встановлено з PORT
# WEBHOOK_HOST=https://your-app.herokuapp.com

# Для розробки з ngrok:
# DEV_MODE=false
# WEBAPP_HOST=localhost
# WEBAPP_PORT=3000
# WEBHOOK_HOST=https://abc123.ngrok.io